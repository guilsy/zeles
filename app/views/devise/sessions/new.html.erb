<div class="panel panel-info">
	<div class="panel-heading"><h2>Войти</h2></div>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class ="panel-body"><%= f.label :email %><br />
	  <%= f.email_field :email, :autofocus => true %></div>

	  <div class ="panel-body"><%= f.label "Пароль"%><br />
	  <%= f.password_field :password %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div class ="panel-body"><%= f.check_box :remember_me %> <%= f.label "Запомнить меня" %></div>
	  <% end -%>

	  <div class ="panel-body"><%= f.submit "Войти", class: "btn btn-primary" %></div>
	<% end %>

		<div class ="panel-body">
			<%= render "devise/shared/links" %>
		</div>
</div>
